<% layout('/layout/bolilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Airbnb</h1>
    <h3 class="col-6 offset-3 mt-2 mb-3">Don't have an account? <a href="/signup">Sign up</a></h3>
    <div class="col-6 offset-3">

        <form method="POST" action="/login" novalidate class="needs-validation">
            
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input type="text" name="username" class="form-control" required id="username">
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input type="password" name="password" class="form-control" required id="password">
            </div>
            <button class="btn btn-success">Login</button>
    </div>
</div>